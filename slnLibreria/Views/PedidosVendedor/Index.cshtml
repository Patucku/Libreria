@model slnLibreria.ViewModels.PedidosView
@{
    ViewBag.Title = "Pedidos por Despachar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Pedidos</h2>
<div class="m-1">
    @if (!string.IsNullOrEmpty(@ViewBag.ErrorDespachar))
    {
        <div class="alert alert-warning" role="alert" id="warning-alert">
            @MvcHtmlString.Create(ViewBag.ErrorDespachar.Replace("\n", "</br>"))
        </div>
    }

    @if (!string.IsNullOrEmpty(@ViewBag.Despachado))
    {
        <div class="alert alert-success" role="alert" id="success-alert">
            @MvcHtmlString.Create(ViewBag.Despachado.Replace("\n", "</br>"))
        </div>
    }
</div>

@using (Html.BeginForm())
{
    <div class="">
        <h4>Buscar<i class="fas fa-search m-1"></i></h4>
        <div class="form-group col-8">
            <label for="txtIdCliente" class="">Código cliente: </label>
            @Html.TextBoxFor(m => m.clienteID, new { @class = "form-control  col-6", @id = "txtIdCliente", @size = 15, @min = "1", @step = "1", @value = "1",  @type = "number" })
        </div>
        <input type="submit" value="Buscar" class="btn btn-outline-primary col-3" />
    </div>
}

@using (Html.BeginForm("Index", "PedidosVendedor"))
{
    <input type="submit" value="Actualizar" class="btn btn-sm btn-outline-info ml-1 mb-2 float-right" />
}

<hr />
<table class="table table-sm table-striped">
    <thead class="text-center">
        <tr>
            <th>Cliente</th>
            <th>Pedido</th>
            <th>Libreria</th>
            <th>Sala</th>
            <th>Libro</th>
            <th>Cantidad</th>
            <th></th>
        </tr>
    </thead>
    <tbody class="text-center">
        @foreach (var pedido in Model.DetallePedidos)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => pedido.clienteID)</td>
                <td>@Html.DisplayFor(modelItem => pedido.pedidoID)</td>
                <td>@Html.DisplayFor(modelItem => pedido.libreriaNombre)</td>
                <td>@Html.DisplayFor(modelItem => pedido.salaNombre)</td>
                <td>@Html.DisplayFor(modelItem => pedido.libroNombre)</td>
                <td>@Html.DisplayFor(modelItem => pedido.cantidadPedido)</td>
                <td>
                    @Html.ActionLink("Despachar", "despacharPedido", "PedidosVendedor", new { id = pedido.pedidoID }, new { @class = "btn btn-outline-success" })
                </td>
            </tr>
            }
    </tbody>
</table>



