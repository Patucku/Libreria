@model IEnumerable<slnLibreria.Models.Libreria>

@{
    ViewBag.Title = "Librerias";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script type="text/javascript">
    $(document).ready(function () {
        $('.alertMessage').delay(5000).fadeOut();
    });

</script>
<h2>Librerias</h2>

<p>
    @Html.ActionLink("Agregar", "Crear", null, new { @class = "btn btn-outline-primary" })
</p>
<div class="m-1">
    @if (!string.IsNullOrEmpty(@ViewBag.ErrorLibreria))
    {
        <div class="alert alert-warning" role="alert" id="alertMessage">
            @MvcHtmlString.Create(ViewBag.ErrorLibreria.Replace("\n", "</br>"))
        </div>
    }
    @if (!string.IsNullOrEmpty(@ViewBag.Libreria))
    {
        <div class="alert alert-success" role="alert" id="alertMessage">
            @MvcHtmlString.Create(ViewBag.Libreria.Replace("\n", "</br>"))
        </div>
    }
</div>
<table class="table table-striped">
    <thead>
        <tr>
            <th>
                Nombre
            </th>
            <th>
                Ruc
            </th>
            <th>
                Dirección
            </th>
            <th>
                Teléfono
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.libreriaNombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.libreriaRUC)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.libreriaDireccion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.libreriaTelefono)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Editar", "Libreria", new { id = item.libreriaID}, new { @class = "btn btn-outline-success" }) |
                    @Html.ActionLink("Detalles", "Detalles", "Libreria", new { id = item.libreriaID }, new { @class = "btn btn-outline-info" }) |
                    @Html.ActionLink("Eliminar", "Eliminar", "Libreria", new { id = item.libreriaID }, new { @class = "btn btn-outline-danger" })
                </td>
            </tr>
        }

    </tbody>


</table>
