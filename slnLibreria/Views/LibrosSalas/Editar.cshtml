@model slnLibreria.ViewModels.LibrosSalasView
@{
    ViewBag.Title = "Editar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script type="text/javascript">
    $(document).ready(function () {
        $('#alertMessage').delay(6000).fadeOut();
    });
</script>

<h2>Editar Relación Libro - Sala</h2>
<div class="m-1">
    @if (!string.IsNullOrEmpty(@ViewBag.ErrorAcRelacionarLibroSala))
    {
        <div class="alert alert-warning" role="alert">
            @MvcHtmlString.Create(ViewBag.ErrorAcRelacionarLibroSala.Replace("\n", "</br>"))
        </div>
    }
</div>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <h4>Datos</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.libroSala.librosalaID)
        <div class="form-group">
            @Html.LabelFor(model => model.libroSala.libroNombre, "Libro: ", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DisplayFor(model => model.libroSala.libroNombre, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.libroSala.salaNombre, "Sala: ", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DisplayFor(model => model.libroSala.salaNombre, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <label for="txtCantidad" class="">Cantidad de Libros: </label>
                @Html.TextBoxFor(model => model.libroSala.cantidadLibroSala, new { @class = "form-control", @min = "0", @step = "10", @id = "txtCantidad", @type = "number" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <label for="txtPrecio" class="">Precio Unitario: </label>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text">$</span>
                    </div> <div class="input-group-append">
                        <span class="input-group-text">0,00</span>
                    </div>
                    @Html.TextBoxFor(model => model.libroSala.precioLibroSala, new { @type = "number", @min = "0", @step = "0.01", @class = "form-control" })
                </div>
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.estadoLibroSala, "Estado del Libro: ", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                Activo
                @Html.CheckBoxFor(model => model.estadoLibroSala, true)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Regresar", "Relacionar", null, new { @class = "btn btn-outline-dark m-1" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}